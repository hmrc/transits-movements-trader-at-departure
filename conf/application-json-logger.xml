<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="uk.gov.hmrc.play.logging.JsonEncoder"/>
    </appender>

    <logger name="uk.gov" level="${logger.uk.gov:-WARN}"/>
    <logger name="helpers.XmlBuilderHelper" level="${logger.XmlBuilderService:-INFO}"/>
    <logger name="controllers.DeparturesController" level="${logger.DeparturesController:-ERROR}"/>
    <logger name="controllers.MessagesController" level="${logger.MessagesController:-ERROR}"/>
    <logger name="migrations.MigrationRunnerImpl" level="${logger.MigrationRunner:-INFO}"/>

    <root level="${logger.application:-WARN}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
