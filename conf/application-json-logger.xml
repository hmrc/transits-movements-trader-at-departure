<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="uk.gov.hmrc.play.logging.JsonEncoder"/>
    </appender>

    <logger name="uk.gov" level="WARN"/>
    <logger name="helpers.XmlBuilderHelper" level="INFO"/>
    <logger name="controllers.DeparturesController" level="ERROR"/>
    <logger name="controllers.MessagesController" level="ERROR"/>
    <logger name="migrations.MigrationRunnerImpl" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
